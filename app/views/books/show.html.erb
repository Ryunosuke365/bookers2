<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info_card", user: @book.user %>
      <%= render "books/floating_form", book: @new_book %>
    </div>

    <div class="col-md-8 offset-md-1 pt-3">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse" style="table-layout: fixed; width: 100%;">
        <colgroup>
          <col style="width: 20%;">  <!-- user -->
          <col style="width: 20%;">  <!-- title -->
          <col style="width: 20%;">  <!-- opinion -->
          <col style="width: 20%;">  <!-- edit -->
          <col style="width: 20%;">  <!-- destroy -->
        </colgroup>
        <tbody>
          <tr>
            <!-- User -->
            <td>
              <%= link_to user_path(@book.user) do %>
                <% if @book.user.profile_image&.attached? %>
                  <%= image_tag @book.user.profile_image, size: "60x60", alt: @book.user.name %><br>
                <% else %>
                  <%= image_tag "no_image.jpg", size: "60x60", alt: "No image" %><br>
                <% end %>
                <%= @book.user.name %>
              <% end %>
            </td>

            <!-- Title -->
            <td><%= link_to @book.title, book_path(@book) %></td>

            <!-- Opinion -->
            <td><%= simple_format(@book.body) %></td>

            <!-- Actions -->
            <% if @book.user == current_user %>
              <td class="text-center">
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
              </td>
              <td class="text-center">
                <%= link_to "Destroy", book_path(@book), method: :delete,
                            data: { confirm: "本当に消しますか？" },
                            class: "btn btn-sm btn-danger" %>
              </td>
            <% else %>
              <td></td>
              <td></td>
            <% end %>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>
