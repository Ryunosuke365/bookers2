<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info_card", user: @book.user %>
      <%= render "books/floating_form", book: @new_book %>
    </div>

  <div class="col-md-8 offset-md-1 pt-3">
    <h2>Book detail</h2>
    <table class="table table-hover table-inverse" style="table-layout: fixed; width: 100%;">
      <thead>
        <tr>
          <th style="width: 20%;"></th>
          <th style="width: 20%;">Title</th>
          <th style="width: 20%;">Opinion</th>
          <th style="width: 20%;"></th>
          <th style="width: 20%;"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <!-- User -->
          <td>
            <%= link_to user_path(@book.user) do %>
              <% if @book.user.profile_image&.attached? %>
                <%= image_tag @book.user.profile_image, size: "60x60", alt: @book.user.name %>
              <% else %>
                <%= image_tag "no_image.jpg", size: "60x60", alt: "No image" %>
              <% end %>
            <% end %>
          </td>

          <!-- Title -->
          <td><%= link_to @book.title, book_path(@book) %></td>

          <!-- Opinion -->
          <td><%= simple_format(@book.body) %></td>

          <!-- Favorite column -->
          <td class="text-center align-middle">
            <% if user_signed_in? %>
              <% if @book.favorited_by?(current_user) %>
                <%= link_to book_favorite_path(@book), method: :delete, class: "text-danger" do %>
                  <i class="fas fa-heart"></i> <%= @book.favorites.count %>
                <% end %>
              <% else %>
                <%= link_to book_favorite_path(@book), method: :post, class: "text-secondary" do %>
                  <i class="far fa-heart"></i> <%= @book.favorites.count %>
                <% end %>
              <% end %>
            <% else %>
              <span class="text-secondary"><i class="far fa-heart"></i> <%= @book.favorites.count %></span>
            <% end %>
          </td>

          <!-- Comments count column -->
          <td class="text-center align-middle text-muted">
            コメント数: <%= @book.book_comments.count %>
          </td>
        </tr>
      </tbody>
    </table>

      <% if @book.user_id == current_user&.id %>
        <div class="mb-3">
          <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-sm btn-success mr-2' %>
          <%= link_to 'Destroy', book_path(@book), method: :delete,
                      data: { confirm: '本当に消しますか？' },
                      class: 'btn btn-sm btn-danger' %>
        </div>
      <% end %>

      <!-- Comments -->
      <div class="card">
        <div class="card-header">
          コメント一覧
        </div>
        <ul class="list-group list-group-flush">
          <% @book.book_comments.includes(:user).order(created_at: :desc).each do |bc| %>
            <li class="list-group-item d-flex align-items-center justify-content-between">
              <div>
                <% if bc.user.profile_image&.attached? %>
                  <%= image_tag bc.user.profile_image, size: "40x40", class: "mr-2 rounded" %>
                <% else %>
                  <%= image_tag "no_image.jpg", size: "40x40", class: "mr-2 rounded" %>
                <% end %>
                <strong><%= link_to bc.user.name, user_path(bc.user) %></strong>
                <small class="text-muted ml-2"><%= bc.created_at.strftime('%Y/%m/%d') %></small>
                <div class="mt-1"><%= bc.comment %></div>
              </div>
              <% if bc.user_id == current_user&.id %>
                <%= link_to "Destroy", book_book_comment_path(@book, bc), method: :delete,
                            data: { confirm: "このコメントを削除しますか？" },
                            class: "btn btn-sm btn-outline-danger" %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

      <% if user_signed_in? %>
        <div class="card mt-3">
          <div class="card-body">
            <%= form_with model: [@book, @book_comment] do |f| %>
              <div class="form-group">
                <%= f.text_area :comment, rows: 4, placeholder: "コメントをここに", class: "form-control" %>
              </div>
              <%= f.submit "送信する", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
