<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info_card", user: @user %>
      <%= render "books/floating_form", book: Book.new %>
    </div>

    <div class="col-md-8 offset-md-1 pt-3">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if @user.profile_image&.attached? %>
                  <%= link_to user_path(@user) do %>
                    <%= image_tag @user.profile_image, size: "60x60", alt: @user.name %>
                  <% end %>
                <% else %>
                  <%= link_to user_path(@user) do %>
                    <%= image_tag "no_image.jpg", size: "60x60", alt: "No image" %>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
