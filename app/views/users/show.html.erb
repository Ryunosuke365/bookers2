<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info_card", user: @user %>
      <%= render "books/floating_form", book: Book.new %>
    </div>

    <div class="col-md-8 offset-md-1 pt-3">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th style="width: 20%;"></th>
            <th style="width: 20%;">Title</th>
            <th style="width: 20%;">Opinion</th>
            <th style="width: 20%;"></th>
            <th style="width: 20%;"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if @user.profile_image&.attached? %>
                  <%= link_to user_path(@user) do %>
                    <%= image_tag @user.profile_image, size: "60x60", alt: @user.name %>
                  <% end %>
                <% else %>
                  <%= link_to user_path(@user) do %>
                    <%= image_tag "no_image.jpg", size: "60x60", alt: "No image" %>
                  <% end %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book) %>
              </td>
              <td>
                <%= book.body %>
              </td>
              <td class="text-center align-middle">
                <% if user_signed_in? %>
                  <% if book.favorited_by?(current_user) %>
                    <%= link_to book_favorite_path(book), method: :delete, class: "text-danger" do %>
                      <i class="fas fa-heart"></i> <%= book.favorites.count %>
                    <% end %>
                  <% else %>
                    <%= link_to book_favorite_path(book), method: :post, class: "text-secondary" do %>
                      <i class="far fa-heart"></i> <%= book.favorites.count %>
                    <% end %>
                  <% end %>
                <% else %>
                  <span class="text-secondary"><i class="far fa-heart"></i> <%= book.favorites.count %></span>
                <% end %>
              </td>
              <td class="text-center align-middle text-muted">
                コメント数: <%= book.book_comments.count %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
