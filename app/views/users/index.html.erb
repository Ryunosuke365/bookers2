<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info_card", user: current_user %>
      <%= render "books/floating_form", book: Book.new %>
    </div>

    <div class="col-md-8 offset-md-1 pt-3">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |u| %>
            <tr>
              <td>
                <% if u.profile_image&.attached? %>
                  <%= image_tag u.profile_image, size: "60x60", alt: u.name %>
                <% else %>
                  <%= image_tag "no_image.jpg", size: "60x60", alt: "No image" %>
                <% end %>
              </td>
              <td><%= u.name %></td>
              <td><%= link_to "Show", user_path(u) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users if defined?(paginate) %>
    </div>
  </div>
</div>
