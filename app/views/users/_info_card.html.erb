<div class="card-body">
  <h2 class="mb-2">User info</h2>

  <div class="text-left mb-2">
    <% if user.profile_image&.attached? %>
      <%= image_tag user.profile_image, alt: user.name, size: "120x120" %>
    <% else %>
      <%= image_tag "no_image.jpg", alt: "NO IMAGE", size: "120x120" %>
    <% end %>
  </div>

  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction.to_s %></th>
      </tr>
    </tbody>
  </table>

  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
